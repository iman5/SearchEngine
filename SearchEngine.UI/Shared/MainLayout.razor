@inherits LayoutComponentBase
@*
    NavMenu component is added as a component.
    Body of the page is added to show each component's content.
*@
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="/" target="_blank">Home</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

